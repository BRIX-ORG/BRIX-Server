<mjml>
    <mj-head>
        <mj-title>BRIX Security - Password Reset Success</mj-title>
        <mj-preview>Your password has been successfully reset</mj-preview>
        <mj-font
            name="Inter"
            href="https://fonts.googleapis.com/css2?family=Inter:wght@400;700&display=swap"
        />
        <mj-font
            name="JetBrains Mono"
            href="https://fonts.googleapis.com/css2?family=JetBrains+Mono&display=swap"
        />
        <mj-font
            name="Space Grotesk"
            href="https://fonts.googleapis.com/css2?family=Space+Grotesk:wght@700&display=swap"
        />
        <mj-attributes>
            <mj-all font-family="'Inter', Arial, sans-serif" />
            <mj-text color="#ffffff" line-height="1.6" />
        </mj-attributes>
        <mj-style>
            body {
                background-image: url('https://res.cloudinary.com/dpndyuheh/image/upload/v1769707870/export_usvops.png');
                background-repeat: repeat;
                background-color: #050505;
            }
            .full-grid {
                background-image: url('https://res.cloudinary.com/dpndyuheh/image/upload/v1769707870/export_usvops.png') !important;
                background-repeat: repeat !important;
                background-color: #050505 !important;
            }
        </mj-style>
    </mj-head>

    <mj-body background-color="#050505">
        <mj-wrapper full-width="full-width" css-class="full-grid" padding="0">
            <!-- Header with BRIX Logo & Text same row -->
            <mj-section padding="40px 20px 20px" full-width="full-width">
                <mj-group width="220px">
                    <mj-column width="25%" vertical-align="middle">
                        <mj-image
                            src="https://res.cloudinary.com/dpndyuheh/image/upload/v1769707333/favicon_pcacy2.png"
                            width="28px"
                            align="right"
                            padding="0"
                        />
                    </mj-column>
                    <mj-column width="75%" vertical-align="middle">
                        <mj-text
                            align="left"
                            font-family="'JetBrains Mono', monospace"
                            font-size="24px"
                            font-weight="700"
                            letter-spacing="0.3em"
                            padding="0 0 0 12px"
                            line-height="32px"
                        >
                            BRIX<span style="color: #00eeff">.</span>
                        </mj-text>
                    </mj-column>
                </mj-group>
            </mj-section>

            <!-- Main Content Card -->
            <mj-section
                background-color="transparent"
                full-width="full-width"
                border="1px solid #1a1a1a"
                border-radius="8px"
                padding="40px 30px"
            >
                <mj-column>
                    <!-- Headline -->
                    <mj-text
                        align="center"
                        font-family="'Space Grotesk', sans-serif"
                        font-size="32px"
                        font-weight="700"
                        color="#ffffff"
                        padding="0 0 10px"
                    >
                        Security Protocol Updated
                    </mj-text>

                    <!-- Body Text -->
                    <mj-text align="center" font-size="16px" color="#9ca3af" padding="0 20px 30px">
                        The security credentials for your account have been successfully modified.
                    </mj-text>

                    <!-- Success Icon -->
                    <mj-text align="center" font-size="80px" color="#39ff14" padding="20px 0">
                        âœ“
                    </mj-text>

                    <!-- Success Message -->
                    <mj-text
                        align="center"
                        font-size="18px"
                        font-weight="500"
                        color="#ffffff"
                        padding="10px 0 5px"
                    >
                        Password Reset Successful
                    </mj-text>

                    <mj-text
                        align="center"
                        font-family="'JetBrains Mono', monospace"
                        font-size="12px"
                        color="#b29cba"
                        text-transform="uppercase"
                        letter-spacing="0.1em"
                        padding="0 0 20px"
                    >
                        System sync complete
                    </mj-text>
                </mj-column>
            </mj-section>

            <!-- Footer -->
            <mj-section padding="30px 20px" border-top="1px solid #1a1a1a" full-width="full-width">
                <mj-column>
                    <mj-text
                        align="center"
                        font-family="'JetBrains Mono', monospace"
                        font-size="10px"
                        color="#6b7280"
                        line-height="1.8"
                    >
                        <div
                            style="
                                border-bottom: 1px solid #1a1a1a;
                                padding-bottom: 4px;
                                margin-bottom: 4px;
                            "
                        >
                            SECURITY_HASH: <span style="color: #d1d5db">0x9E3F1A...D8E2</span>
                        </div>
                        <div
                            style="
                                border-bottom: 1px solid #1a1a1a;
                                padding-bottom: 4px;
                                margin-bottom: 4px;
                            "
                        >
                            AUTH_PROTOCOL: <span style="color: #d1d5db">SSL-V3-ENCRYPTED</span>
                        </div>
                    </mj-text>

                    <mj-text
                        align="center"
                        font-size="11px"
                        color="#4b5563"
                        padding="20px 30px 0"
                        line-height="1.6"
                    >
                        This is an automated system notification. If you did not perform this
                        action, please secure your account by contacting our incident response team
                        immediately.
                    </mj-text>
                </mj-column>
            </mj-section>
        </mj-wrapper>
    </mj-body>
</mjml>
